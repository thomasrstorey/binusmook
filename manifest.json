{
	"manifest_version": 3,
	"name": "minusbook",
	"description": "Remove all content from Facebook",
	"version": "1.4",
	"permissions": [
		"https://www.facebook.com/",
		"tabs",
		"background"
	],

	"page_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},

	"content_scripts": [
		{
			"matches": ["https://www.facebook.com/*"],
			"js": ["minusbook.js"]
		}
	],

	"background": {
		"scripts": ["background.js"],
		"persistent": true
	}
	
	
}